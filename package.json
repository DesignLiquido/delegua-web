{
    "scripts": {
        "copiar-arquivos": "copyfiles -V ./index.html ./exemplos.html ./dist && copyfiles -V ./editor.js ./menu.js ./dist && copyfiles -V -f ./node_modules/codeflask/build/codeflask.min.js ./dist",
        "copiar-icones": "copyfiles -V ./favicon.ico ./dist && copyfiles -V ./icones/* ./dist",
        "empacotar": "yarn gerar-css && yarn gerar-web && yarn copiar-arquivos && yarn copiar-icones",
        "gerar-css": "sass scss/estilos.scss:./dist/estilos.css scss/codigos.scss:./dist/codigos.css",
        "gerar-css:tempo-real": "sass scss/estilos.scss:./dist/estilos.css scss/codigos.scss:./dist/codigos.css --watch",
        "gerar-web": "tsc && browserify dist/index.js --s Delegua -o dist/delegua.js",
        "publicar": "yarn empacotar && gh-pages -d dist"
    },
    "devDependencies": {
        "@types/codeflask": "^1.4.3",
        "@types/node": "^17.0.25",
        "browserify": "latest",
        "codeflask": "^1.4.1",
        "gh-pages": "^3.2.3",
        "sass": "^1.50.1",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "@designliquido/delegua": "^0.9.2",
        "copyfiles": "^2.4.1"
    }
}
